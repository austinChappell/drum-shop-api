<% include partials/_header %>

<a href="/">Back To Inventory</a>

<form class="" action="/edit_inventory/<%= item._id %>" method="POST">
  <div>
    <label>Category: </label>
    <select name="category">
      <%- options %>
    </select>
  </div>
  <div>
    <label>Item for Sale: </label>
    <input type="text" name="name" value="<%= item.name %>" />
  </div>
  <div>
    <label>Brand: </label>
    <input type="text" name="brand" value="<%= item.brand %>" />
  </div>
  <div>
    <label>Model: </label>
    <input type="text" name="model" value="<%= item.model %>" />
  </div>
  <div>
    <label>Image URL: </label>
    <input type="text" name="imageUrl" value="<%= item.imageUrl %>" />
  </div>
  <div>
    <label>Price: </label>
    <input type="number" step="0.01" name="price" value="<%= item.price %>" />
  </div>
  <div>
    <label>Description: </label>
    <textarea name="description" rows="8" cols="80"><%= item.description %></textarea>
  </div>
  <input type="submit" value="Update Item" />
</form>

<form action="/delete_inventory/<%= item._id %>" method="POST">
  <input type="submit" value="Delete Item" />
</form>

<% include partials/_footer %>
